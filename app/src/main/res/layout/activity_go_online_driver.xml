<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	xmlns:app="http://schemas.android.com/apk/res-auto"
	android:id="@+id/activity_go_online_driver"
	android:layout_width="match_parent"
	android:layout_height="match_parent"
	android:orientation="vertical"
	tools:context="com.webnexs.tranznexsdriver.activity.GoOnlineDriverActivity">

	<FrameLayout
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:background="@color/white"
			android:gravity="center_vertical"
			android:minHeight="?android:attr/actionBarSize"
			android:orientation="vertical">


				<ImageView
					android:layout_gravity="center"
					android:id="@+id/header_title"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:src="@drawable/logo"/>
		</LinearLayout>




		<!--<LinearLayout
			android:id="@+id/qrScanRoot"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:background="#000"
			android:orientation="vertical"
			android:visibility="gone">

			<com.dlazaro66.qrcodereaderview.QRCodeReaderView
				android:id="@+id/qrDecoderView"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_weight="1"/>

			<ToggleButton
				style="@style/ButtonColor"
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:onClick="toggleFlash"
				android:textOff="ENABLE FLASH"
				android:textOn="DISABLE FLASH"/>
		</LinearLayout>-->

		<LinearLayout
			android:id="@+id/loginBtnRoot"
			android:layout_width="match_parent"
			android:layout_height="match_parent"
			android:orientation="vertical">

			<LinearLayout
				android:id="@+id/rootContent"
				android:layout_width="match_parent"
				android:layout_height="0dp"
				android:layout_gravity="center"
				android:layout_weight="1"
				android:gravity="center"
				android:orientation="vertical">

				<ImageView
					android:layout_width="150dp"
					android:layout_height="wrap_content"
					android:layout_centerInParent="true"
					android:layout_marginBottom="@dimen/activity_margin"
					android:adjustViewBounds="true"
					android:src="@drawable/splash_screen_logo"/>
			</LinearLayout>

				<Button
					android:id="@+id/goOnline"
					android:layout_marginRight="@dimen/height_20"
					android:layout_marginLeft="20dp"
					android:background="@drawable/round_shap_background"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dp"
					style="@style/ButtonColor"
					android:layout_marginBottom="@dimen/margin_10"
					android:text="TAP HERE TO GO ONLINE"/>

				<!--<Button
					style="@style/ButtonColor"
					android:layout_width="match_parent"
					android:layout_height="wrap_content"
					android:layout_marginTop="1dp"
					android:onClick="logout"
					android:text="LOGOUT"/>-->
		</LinearLayout>
	</FrameLayout>
</LinearLayout>
