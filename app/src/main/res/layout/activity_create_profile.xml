<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/activityBack"
    android:orientation="vertical"
    tools:context="com.webnexs.tranznexsdriver.activity.CreateProfile">

    <RelativeLayout
        android:id="@+id/layout_back_arrow"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:padding="@dimen/margin_10"
        android:layout_marginTop="@dimen/margin_10"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/navigation_arrow"
            android:layout_centerVertical="true"
            android:layout_marginLeft="@dimen/margin_15"/>
    </RelativeLayout>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/height_20"
            android:layout_marginRight="@dimen/height_20"
            android:layout_marginTop="@dimen/margin_10">

            <TextView
                android:id="@+id/txt_for_pass_logo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/img_logo"
                android:layout_marginBottom="@dimen/margin_10"
                android:text="Create profile"
                android:textStyle="bold"
                android:textColor="@color/black"
                android:textSize="@dimen/height_25"/>


                <android.support.design.widget.TextInputLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColorHint="@color/dark_gray">

                    <EditText
                        android:id="@+id/fname"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:hint="First name"
                        android:textColorHint="@color/dark_gray"
                        android:imeOptions="actionUnspecified"
                        android:maxLines="1"
                        android:focusable="true"
                        android:focusableInTouchMode="true"
                        android:textSize="@dimen/height_15"
                        android:inputType="textVisiblePassword" />
                </android.support.design.widget.TextInputLayout>

                    <android.support.design.widget.TextInputLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textColorHint="@color/dark_gray"
                        >

                        <EditText
                            android:focusable="true"
                            android:focusableInTouchMode="true"
                            android:textSize="@dimen/height_15"
                            android:id="@+id/lname"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:hint="Last name"
                            android:layout_weight="1"
                            android:textColor="@color/black"
                            android:layout_marginTop="5dp"
                            android:imeOptions="actionUnspecified"
                            android:maxLines="1"
                            android:inputType="textVisiblePassword"
                            />
                    </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray">

                <EditText
                    android:focusable="true"
                    android:focusableInTouchMode="true"
                    android:textSize="@dimen/height_15"
                    android:id="@+id/regEmail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:hint="Email "
                    android:textColorHint="@color/dark_gray"
                    android:inputType="textEmailAddress" />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray">

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/height_15"
                android:id="@+id/password"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Password "
                android:textColorHint="@color/dark_gray"
                android:inputType="textVisiblePassword" />
            </android.support.design.widget.TextInputLayout>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray">

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/height_15"
                android:id="@+id/cPassword"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Confirm password"
                android:textColorHint="@color/dark_gray"
                />
            </android.support.design.widget.TextInputLayout>

            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray">

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/height_15"
                android:id="@+id/mobNo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Mobile Number"
                android:textColorHint="@color/dark_gray"
                android:inputType="number"
                />
            </android.support.design.widget.TextInputLayout>

            <TextView
                android:layout_marginTop="@dimen/font_10"
                android:id="@+id/edit_dob"
                android:layout_width="match_parent"
                android:layout_height="@dimen/height_40"
                android:hint="Date of birth"
                android:textColor="@color/black"
                android:gravity="left|center"
                android:textColorHint="@color/dark_gray"
                android:textSize="@dimen/font_16" />
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/dark_gray"></View>


            <android.support.design.widget.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColorHint="@color/dark_gray">

            <EditText
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:textSize="@dimen/height_15"
                android:id="@+id/address"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Address"
                android:inputType="textVisiblePassword"
                android:imeOptions="actionUnspecified"
                android:textColorHint="@color/dark_gray"
                />
            </android.support.design.widget.TextInputLayout>

            <!--<LinearLayout
                android:layout_width="match_parent"
                android:orientation="horizontal"
                android:layout_height="wrap_content"
                android:layout_gravity="center">

                <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/license_img"
                    android:layout_width="96dp"
                    android:layout_height="96dp"
                    android:src="@drawable/drivericon"
                    app:civ_border_width="2dp"
                    app:civ_border_color="#FF000000" />

                <EditText
                    android:id="@+id/license"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:hint="License Number"
                    android:layout_marginLeft="10dp"
                    android:textColorHint="@color/dark_gray"
                    android:layout_gravity="center"
                    android:maxLines="1"
                    android:layout_weight="1" />
            </LinearLayout>-->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="5dp"
                    android:layout_marginTop="5dp"
                    android:textColor="@color/black"
                    android:text="Gender" />
            <RadioGroup
                android:id="@+id/radiogrup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RadioButton
                    android:id="@+id/male"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5dp"
                    android:text="Male"/>
                <RadioButton
                    android:id="@+id/female"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Female"/>
                <RadioButton
                    android:id="@+id/other"
                    android:layout_marginLeft="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Others"/>
            </RadioGroup>
            </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:layout_marginBottom="10dp">

            <TextView
                android:layout_marginTop="@dimen/margin_10"
                android:gravity="center"
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textSize="10dp"
                android:text="@string/terms_policy"/>

            <Button
                android:id="@+id/crt_prof_nxt"
                style="@style/ButtonColor"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="Next"/>

            <TextView
                android:gravity="center"
               android:id="@+id/already_login"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:text="Already Registerd! Signin now"
                android:layout_marginBottom="20dp" />
        </LinearLayout>

        </LinearLayout>
        </ScrollView>
</LinearLayout>